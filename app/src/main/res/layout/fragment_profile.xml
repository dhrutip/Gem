<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/profilepic_blank"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/ibUpdateProfilePic"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_alignRight="@id/ivProfilePic"
        android:layout_alignBottom="@id/ivProfilePic"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="-8dp"
        android:background="#00FFFFFF"
        android:src="@drawable/update_profile_pic" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProfilePic"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:text="Username"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProfilePic"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:text="This is a bio!"
        android:textSize="15dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibUpdateProfilePic"
        android:layout_marginTop="16dp"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@id/sliding_tabs"
        android:background="@android:color/white" />

</RelativeLayout>