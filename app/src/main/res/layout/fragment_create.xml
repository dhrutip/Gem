<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".fragments.CreateFragment">

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="title..."
        android:textSize="32dp"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:ems="10"
        android:hint="description..."
        android:layout_below="@id/etTitle"/>

    <ImageButton
        android:id="@+id/btnCaptureImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@id/etDescription"
        android:layout_alignParentRight="true"
        android:background="#00FFFFFF"
        android:src="@drawable/add_photo" />

    <ImageView
        android:id="@+id/ivImageOne"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/etDescription"
        android:src="@drawable/photo_blank" />

    <ImageView
        android:id="@+id/ivImageTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/etDescription"
        android:layout_toEndOf="@id/ivImageOne"
        android:layout_marginStart="16dp"
        android:src="@drawable/photo_blank"/>

    <TextView
        android:id="@+id/tvInfoStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageOne"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:text="Start Date"/>

    <Button
        android:id="@+id/btnStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInfoStartDate"
        android:layout_alignParentStart="true"
        android:text="Choose Start Date"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tvInfoEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageOne"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:text="End Date"/>

    <Button
        android:id="@+id/btnEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInfoEndDate"
        android:layout_alignParentEnd="true"
        android:text="Choose End Date"
        android:textAllCaps="false" />

    <ImageButton
        android:id="@+id/btnSetLocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:src="@drawable/add_location" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create!"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>